# Database
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/portfolio_intelligence

# Redis
REDIS_URL=redis://localhost:6379/0

# TradeStation OAuth
TRADESTATION_CLIENT_ID=your_client_id
TRADESTATION_CLIENT_SECRET=your_client_secret
TRADESTATION_REDIRECT_URI=http://localhost:8000/api/v1/auth/callback
TRADESTATION_BASE_URL=https://sim-api.tradestation.com/v3
TRADESTATION_TOKEN_URL=https://signin.tradestation.com/oauth/token
TRADESTATION_AUTH_URL=https://signin.tradestation.com/authorize
TRADESTATION_AUDIENCE=https://api.tradestation.com

# Security
SECRET_KEY=your-secret-key-change-in-production
ENCRYPTION_KEY=your-fernet-key-generate-with-cryptography

# Frontend
FRONTEND_URL=http://localhost:3000

# Flask Suite (for cross-linking)
SUITE_URL=http://localhost:5000

# Testing
USE_MOCK_TRADESTATION=true  # Set to false when real TradeStation credentials are ready

# Market Data Provider
MARKET_DATA_PROVIDER=alphavantage  # Options: "tradestation", "alphavantage", "mock"
ALPHAVANTAGE_API_KEY=your_alphavantage_api_key  # Get from https://www.alphavantage.co/

# Scheduler
ENABLE_NIGHTLY_UPDATES=true  # Automatic daily price updates at 6 PM ET (only works with AlphaVantage/Mock)
