{
  "build": {
    "builder": "nixpacks"
  },
  "deploy": {
    "startCommand": "python railway_migrate.py && gunicorn app:app --bind 0.0.0.0:$PORT --timeout 150",
    "healthcheckPath": "/health",
    "healthcheckTimeout": 150,
    "restartPolicyType": "on_failure",
    "volumes": [
      {
        "mountPath": "/data",
        "name": "ism-data-volume"
      }
    ]
  }
}