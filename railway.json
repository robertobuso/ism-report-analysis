{
  "build": {
    "builder": "nixpacks"
  },
  "deploy": {
    "startCommand": "gunicorn app:app --bind 0.0.0.0:$PORT --timeout 150", // <-- Increased timeout
    "healthcheckPath": "/health",
    "healthcheckTimeout": 150, // <-- Increase healthcheck timeout too!
    "restartPolicyType": "on_failure",
    "volumes": [
      {
        "path": "/data",
        "name": "ism-data-volume"
      }
    ]
  }
}